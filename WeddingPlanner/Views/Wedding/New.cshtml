@model Wedding

@{
    ViewData["Title"] = "Home Page";
}
<h1 class="pt-5 text-center" >Welcome to the Wedding Planner</h1>
<div class="container">
  <div class="row">
    <div class="col-6">
      
    </div>
 
  </div>
</div>
<form class="pt-5 " asp-controller="Wedding" asp-action="Create" method="POST">
  <div class="form-group">
    <label asp-for="NameOne"></label>
    <span asp-validation-for="NameOne" class="text-danger font-weight-bold"></span>
    <input asp-for="NameOne" class="form-control" />
  </div>

  <div class="form-group">
    <label asp-for="NameTwo"></label>
    <span asp-validation-for="NameTwo" class="text-danger font-weight-bold"></span>
    <input asp-for="NameTwo" class="form-control" />
  </div>

  <div class="form-group">
    <label asp-for="Date"></label>
    <span asp-validation-for="Date" class="text-danger font-weight-bold"></span>
    <input asp-for="Date" class="form-control" />
  </div>

  <div class="form-group">
    <label asp-for="Address"></label>
    <span asp-validation-for="Address" class="text-danger font-weight-bold"></span>
    @* prefill password for testing for easy register & login *@
    <input asp-for="Address" class="form-control" value="asdfasdf" />
  </div>

  <button class="btn btn-outline-primary">Register</button>
</form>